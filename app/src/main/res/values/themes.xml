<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.NivkhDictionary" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
        <item name="android:windowIsTranslucent">true</item>

        <item name="android:actionOverflowButtonStyle">@style/MyOverflowButtonStyle</item>
    </style>

    <style name="MyOverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="Theme.NivkhDictionary" parent="Base.Theme.NivkhDictionary" />

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/bottom_navigation_item</item>
    </style>

</resources>